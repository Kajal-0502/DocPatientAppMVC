@model DocPatientAppMVC.Models.Patient
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Patient Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
        }
        .dashboard-header {
            background-color: #0d6efd;
            color: white;
            border-radius: 8px;
            padding: 15px 20px;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .dashboard-card {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.05);
            padding: 15px;
            margin-bottom: 15px;
        }
        .patient-info {
            display: flex;
            align-items: center;
            gap: 15px;
        }
        .status-dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            display: inline-block;
            margin-right: 5px;
        }
        .msg-history {
            max-height: 150px;
            overflow-y: auto;
            background: #f1f3f5;
            border-radius: 6px;
            padding: 8px;
            font-size: 0.85rem;
            margin-top: 5px;
        }
        .msg-history .text-start {
            background: #e9ecef;
            padding: 4px 6px;
            border-radius: 4px;
            margin-bottom: 6px;
        }
        .msg-history .text-end {
            background: #d1e7dd;
            padding: 4px 6px;
            border-radius: 4px;
            margin-bottom: 6px;
        }
        .chat-controls {
            display: flex;
            gap: 6px;
            margin-top: 5px;
        }
        .chat-controls input {
            flex: 1;
        }
        .btn-icon {
            width: 36px;
            height: 36px;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 50%;
        }
    </style>
</head>
<body>
    <div class="container py-4">
        <div class="dashboard-header">
            <i class="fa-solid fa-user-doctor"></i>
            <h4 class="mb-0">Patient Dashboard</h4>
        </div>

        <div class="dashboard-card">
            <h5><i class="fa-solid fa-users"></i> Your Doctor</h5>
            <ul class="list-group list-group-flush mt-2">
                <li class="list-group-item d-flex justify-content-between align-items-start" data-userid="@Model.Doctor.Id">
                    <div class="patient-info">
                        <span class="status-dot bg-success"></span>
                        <div>
                            <div class="fw-semibold">@Model.Doctor.Name</div>
                            <small>@Model.Doctor.Username</small>
                        </div>
                    </div>
                    <div class="d-flex flex-column align-items-end" style="min-width:500px;">
                        <div class="chat-controls">
                            <input id="msg-@Model.Doctor.Username" class="form-control form-control-sm" placeholder="Type a message..." />
                            <button class="btn btn-outline-secondary btn-icon" onclick="sendMessageToUser('@Model.Doctor.Username')"><i class="fa fa-paper-plane"></i></button>
                            <button class="btn btn-primary btn-icon" onclick="startCall('@Model.Doctor.Username')"><i class="fa fa-video"></i></button>
                            <button class="btn btn-secondary btn-icon"  onclick="loadChatHistory('@Model.Doctor.Username')"><i class="fa fa-history"></i></button>
                        </div>
                        <input type="hidden" id="currentUserId" value="@Model.Doctor.Username" />
                        <div class="msg-history w-100" id="msg-history-@Model.Doctor.Username" style="display:none;"></div>
                    </div>
                </li>
            </ul>
        </div>
    </div>

    <!-- Incoming Call Modal -->
    <div class="modal fade" id="incomingCallModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header"><h5 class="modal-title">Incoming Call</h5></div>
                <div class="modal-body text-center">
                    <p>Incoming call from <strong><span id="incomingFrom"></span></strong></p>
                    <div class="d-flex justify-content-around">
                        <button class="btn btn-success" onclick="acceptCall()"><i class="fa fa-phone"></i> Accept</button>
                        <button class="btn btn-danger" onclick="rejectCall()"><i class="fa fa-phone-slash"></i> Reject</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Video Call Modal -->
    <div class="modal fade" id="callModal" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Video Call <span id="callTimer" class="ms-2 small text-muted">00:00</span></h5>
                    <button type="button" class="btn-close" aria-label="Close" onclick="endCall()"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-2">
                        <div class="col-6"><video id="localVideo" autoplay muted playsinline style="width:100%;border-radius:8px;"></video></div>
                        <div class="col-6"><video id="remoteVideo" autoplay playsinline style="width:100%;border-radius:8px;"></video></div>
                    </div>
                </div>
                <div class="modal-footer"><button class="btn btn-danger" onclick="endCall()"><i class="fa fa-phone-slash"></i> End Call</button></div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script src="~/js/videocall.js"></script>
    <script src="~/js/chat.js"></script>

    <script>
        window.isPatient = true;

        window.loadChatHistory = async function (userId) {
            var currentUserId = document.getElementById('currentUserId').value;

            const hist = document.querySelector(`#msg-history-${userId}`);
            if (!hist) return;

            hist.style.display = 'block';
            hist.innerHTML = '<p class="text-center text-muted">Loading...</p>';

            try {
                const res = await fetch(`/Home/history?userId=${userId}`);
                if (!res.ok) {
                    hist.innerHTML = '<p class="text-danger">Failed to load history.</p>';
                    return;
                }

                const data = await res.json();
                hist.innerHTML = '';

                if (data.length === 0) {
                    hist.innerHTML = '<p class="text-muted">No history available.</p>';
                    return;
                }

                data.forEach(msg => {
                    const isMine = msg.fromUserId === currentUserId;
                    hist.innerHTML += `
                        <div class="${isMine ? 'text-start' : 'text-end'}">
                            <div class="p-2 rounded ${isMine ? 'bg-light' : 'bg-primary text-white'}" style="display:inline-block;max-width:80%;">
                                <strong>${isMine ? msg.fromUserId : 'You'}</strong>: ${msg.text}
                            </div><br>
                            <small class="text-muted">${new Date(msg.sentAt).toLocaleString()}</small>
                        </div>`;
                });
            } catch (err) {
                hist.innerHTML = '<p class="text-danger">Error loading history.</p>';
                console.error(err);
            }
        };

        window.closeHistory = function (userId) {
            document.querySelector(`#msg-history-${userId}`).style.display = 'none';
        };
    </script>
</body>
</html>
