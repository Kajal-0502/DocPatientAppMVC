@model DocPatientAppMVC.ViewModels.PatientRegisterVm

<html>
<head>
    <meta charset="utf-8" />
    <title>Doctor Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body>
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top">
                    <h3 class="mb-0">Patient Registration</h3>
                </div>
                <div class="card-body p-4">
                    @if (TempData["RegisterMessage"] != null)
                    {
                        <div class="alert alert-success text-center mb-3">
                            @TempData["RegisterMessage"]
                        </div>
                    }

                    <form asp-action="PatientRegister" method="post">
                        <div class="row g-3">
                            <!-- Full Name -->
                            <div class="col-md-6">
                                <label asp-for="PatientName" class="form-label fw-bold">Full Name</label>
                                <input asp-for="PatientName" name="PatientName" class="form-control" placeholder="Enter full name" />
                            </div>

                            <!-- Date -->
                            <div class="col-md-6">
                                <label asp-for="Date" class="form-label fw-bold">Date</label>
                                <input asp-for="Date" name="Date" type="date" class="form-control" />
                            </div>

                            <!-- Mobile -->
                            <div class="col-md-6">
                                <label asp-for="MobileNo" class="form-label fw-bold">Mobile No</label>
                                <input asp-for="MobileNo" name="MobileNo" class="form-control" placeholder="Enter mobile number" />
                            </div>

                            <!-- Address -->
                            <div class="col-md-6">
                                <label asp-for="Address" class="form-label fw-bold">Address</label>
                                <textarea asp-for="Address" name="Address" class="form-control" placeholder="Enter address"></textarea>
                            </div>

                            <!-- Complaint -->
                            <div class="col-12">
                                <label asp-for="Complaint" class="form-label fw-bold">Complaint</label>
                                <textarea asp-for="Complaint" name="Complaint" class="form-control" placeholder="Enter complaint"></textarea>
                            </div>

                            <!-- Doctor -->
                            <div class="col-12">
                                <label class="form-label fw-bold">Doctor</label>
                                <select name="DoctorId" class="form-select">
                                    <option value="">-- Select Doctor --</option>
                                    @foreach (var d in ViewBag.Doctors as IEnumerable<SelectListItem>)
                                    {
                                        <option value="@d.Value">@d.Text</option>
                                    }
                                </select>
                            </div>

                            <!-- Buttons -->
                            <div class="col-12 text-center mt-4">
                                <button class="btn btn-primary px-4 me-2" type="submit">
                                    <i class="bi bi-save"></i> Register
                                </button>
                                <button type="reset" class="btn btn-secondary px-4">
                                    <i class="bi bi-arrow-clockwise"></i> Reset
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>
