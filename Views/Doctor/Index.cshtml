@model IEnumerable<DocPatientAppMVC.Models.Patient>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Doctor Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        body {
            background: #f8f9fa;
        }

        .dashboard-header {
            background: #0d6efd;
            color: #fff;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .patient-list {
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
            padding: 15px;
        }

        .list-group-item {
            border: none;
            border-bottom: 1px solid #eee;
            padding: 15px 10px;
        }

            .list-group-item:last-child {
                border-bottom: none;
            }

        .status-dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            display: inline-block;
        }

        .online {
            background: #28a745;
        }

        .offline {
            background: #dc3545;
        }

        .msg-history {
            font-size: 0.85rem;
            max-height: 120px;
            overflow-y: auto;
            background: #f1f1f1;
            padding: 8px;
            border-radius: 6px;
            margin-top: 8px;
        }

            .msg-history div {
                padding: 4px 6px;
            }

            .msg-history .text-end {
                background: #d1e7dd;
                border-radius: 6px;
                margin-bottom: 6px;
            }

            .msg-history .text-start {
                background: #f8d7da;
                border-radius: 6px;
                margin-bottom: 6px;
            }

        .action-btns button {
            min-width: 36px;
        }
    </style>
</head>
<body>
    <div class="container py-4">
        <div class="dashboard-header text-center">
            <h3><i class="fa-solid fa-user-doctor me-2"></i>Doctor Dashboard</h3>
        </div>

        <div class="patient-list">
            <h5 class="mb-3"><i class="fa-solid fa-users me-2"></i>Patients</h5>
            <ul class="list-group">
                @foreach (var p in Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-start" data-userid="@p.UserId">
                        <div class="d-flex align-items-center">
                            <span class="status-dot offline me-2" title="Offline"></span>
                            <div>
                                <div class="fw-semibold">@p.PatientName</div>
                                <div class="small text-muted"><i class="fa-solid fa-phone me-1"></i>@p.MobileNo</div>
                            </div>
                        </div>
                        <div class="d-flex flex-column align-items-end" style="min-width:500px;">
                            <div class="d-flex align-items-center gap-2 w-100 action-btns">
                                <input id="msg-@p.UserId" class="form-control form-control-sm" placeholder="Type a message..." style="width:150px" />
                                <button class="btn btn-sm btn-outline-secondary" title="Send Message" onclick="sendMessageToUser('@p.UserId')">
                                    <i class="fa-solid fa-paper-plane"></i>
                                </button>
                                <button class="btn btn-sm btn-primary" title="Start Video Call" onclick="startCall('@p.UserId')">
                                    <i class="fa-solid fa-video"></i>
                                </button>
                                <button class="btn btn-sm btn-secondary" title="View Chat History" onclick="loadChatHistory('@p.UserId')">
                                    <i class="fa-solid fa-clock-rotate-left"></i>
                                </button>
                            </div>
                            <input type="hidden" id="currentUserId" value="@p.UserId" />
                            <div class="msg-history w-100" id="msg-history-@p.UserId" style="display:none;"></div>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>

    <!-- Incoming Call Modal -->
    <div class="modal fade" id="incomingCallModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="fa-solid fa-phone-volume me-2"></i>Incoming Call</h5>
                </div>
                <div class="modal-body text-center">
                    <p>Incoming call from <strong><span id="incomingFrom"></span></strong></p>
                    <div class="d-flex justify-content-around">
                        <button class="btn btn-success" onclick="acceptCall()"><i class="fa fa-phone"></i> Accept</button>
                        <button class="btn btn-danger" onclick="rejectCall()"><i class="fa fa-phone-slash"></i> Reject</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Video Call Modal -->
    <div class="modal fade" id="callModal" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="fa-solid fa-video me-2"></i>Video Call <span id="callTimer" class="ms-2 small text-muted">00:00</span></h5>
                    <button type="button" class="btn-close" aria-label="Close" onclick="endCall()"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-2">
                        <div class="col-6">
                            <video id="localVideo" autoplay muted playsinline style="width:100%;border:1px solid #ddd;border-radius:6px;"></video>
                        </div>
                        <div class="col-6">
                            <video id="remoteVideo" autoplay playsinline style="width:100%;border:1px solid #ddd;border-radius:6px;"></video>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger" onclick="endCall()"><i class="fa fa-phone-slash"></i> End Call</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script src="~/js/videocall.js"></script>
    <script src="~/js/chat.js"></script>

    <script>
        window.loadChatHistory = async function (userId) {
            var currentUserId = document.getElementById('currentUserId').value;
            const hist = document.querySelector(`#msg-history-${userId}`);
            if (!hist) return;
            hist.style.display = 'block';
            hist.innerHTML = '<p class="text-center text-muted">Loading...</p>';

            try {
                const res = await fetch(`/Home/history?userId=${userId}`);
                if (!res.ok) {
                    hist.innerHTML = '<p class="text-danger">Failed to load history.</p>';
                    return;
                }
                const data = await res.json();
                hist.innerHTML = '';
                if (data.length === 0) {
                    hist.innerHTML = '<p class="text-muted">No history available.</p>';
                    return;
                }
                data.forEach(msg => {
                    const isMine = msg.fromUserId === currentUserId;
                    hist.innerHTML += `
                        <div class="${isMine ? 'text-start' : 'text-end'}">
                            <small><strong>${isMine ? msg.fromUserId : 'You'}</strong>: ${msg.text}</small><br>
                            <small class="text-muted">${new Date(msg.sentAt).toLocaleString()}</small>
                        </div>`;
                });
            } catch (err) {
                hist.innerHTML = '<p class="text-danger">Error loading history.</p>';
                console.error(err);
            }
        };
    </script>
</body>
</html>
